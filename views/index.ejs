<!-- Page content -->
<div class="w3-content" style="max-width:2000px;margin-top:46px">

    <!-- ABOUT ME Section -->
    <div class="w3-container w3-content w3-center w3-padding-64 fadeIn" style="max-width:800px" id="band">
        <h2 class="w3-wide"> ABOUT ME </h2>
